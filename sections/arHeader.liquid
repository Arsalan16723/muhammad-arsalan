<header class="arHeader">
    <div class="arHeader_inner">
        <div class="arHeader_blocks">
            <div class="arHeaderLogo_iconBlock">
                <button type="button" id="mobToggle">
                    <span class="arMenu_icon menuIcon" onclick="menuOpen(this)">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="13" viewBox="0 0 20 13" fill="none">
                            <path d="M1 6.5H19" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M1 1.5H19" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M1 11.5H19" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                    </span>
                    <span class="arMenuClose_icon menuIcon" style="display:none" onclick="menuClose(this);">
                        <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 15 15" fill="none">
                            <path d="M1 13.9997L13.7279 1.27177" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M1 1.00031L13.7279 13.7282" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </span>
                </button>
                <img src="{{section.settings.logo | image_url: width: '2000x'}}"  width="100%" height="100%">
            </div>
            <div class="arHeadertext_btnBlock">
                <div class="arTextBlock">
                    <p>{{section.settings.text}}</p>
                </div>
                <div class="arBTnBlock">
                    <a href="{{section.settings.link}}">{{section.settings.label}}</a>
                </div>
            </div>
        </div>
    </div>
</header>
<script>
  function menuOpen(element){
    var headerTarget = document.querySelector('.arHeadertext_btnBlock');
    var closeIcon = document.querySelector('.arMenuClose_icon');
    var openIcon = document.querySelector('.arMenu_icon');
    headerTarget.style.maxHeight = '125px';
    closeIcon.style.display = 'block'
    element.style.display = 'none'
  }
  function menuClose(element){
    var headerTarget = document.querySelector('.arHeadertext_btnBlock');
    var closeIcon = document.querySelector('.arMenuClose_icon');
    var openIcon = document.querySelector('.arMenu_icon');
    headerTarget.style.maxHeight = '0px';
    element.style.display = 'none'
    openIcon.style.display = 'block'
  }
</script>
{%  schema  %}  
{
    "name": "ar Header",
    "settings":[
        {
            "type": "image_picker",
            "id": "logo",
            "label": "Logo"
        },
        {
            "type": "textarea",
            "id": "text",
            "label": "Text",
            "default": "Add header text here"
        },
        {
            "type": "url",
            "id": "link",
            "label": "link"
        },
        {
            "type": "text",
            "id": "label",
            "label": "Button Text",
            "default": "Choose Gift"
        }
    ],
    "presets": [
        {
            "name": "Ar Header",
            "category": "header"
        }
    ]
}
{% endschema %}